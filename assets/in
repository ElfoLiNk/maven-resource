#!/bin/bash

set -e

exec 3>&1 # make stdout available as fd 3 for the result
exec 1>&2 # redirect all output to stderr for logging

destination=$1

if [ -z "$destination" ]; then
  echo "usage: $0 <path/to/destination>" >&2
  exit 1
fi

# for jq
PATH=/usr/local/bin:$PATH

payload=$(mktemp $TMPDIR/git-resource-request.XXXXXX)

cat > $payload <&0

url=$(jq -r '.source.url // ""' < $payload)
artifact=$(jq -r '.source.artifact // ""' < $payload)
version=$(jq -r '.version.version // ""' < $payload)

# groupId:artifactId:type[:classifier]
groupId=$(echo $artifact | cut -d ":" -f 1)
artifactId=$(echo $artifact | cut -d ":" -f 2)
packaging=$(echo $artifact | cut -d ":" -f 3)
classifier=$(echo $artifact | cut -d ":" -f 4)

artifactItem=$groupId:$artifactId:$version:$packaging
[ -n "$classifier" ] && artifactItem="$artifactItem:$classifier"

mvn dependency:copy \
    -Dartifact=$artifactItem \
    -DremoteRepositories=$url \
    -DoutputDirectory=$destination

ls -al $destination

cat <<EOF
{
  "version": {
    "version": "$version"
  }
}
EOF
